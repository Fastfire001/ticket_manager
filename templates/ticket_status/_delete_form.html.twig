<form method="post" action="{{ path('ticket_status_delete', {'id': ticket_status.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ticket_status.id) }}">
    <button class="btn">Delete</button>
</form>
